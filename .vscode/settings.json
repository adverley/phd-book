{   
    "latex-workshop.view.pdf.invert": 0,
    "git.ignoreLimitWarning": true,
    "editor.formatOnSave": true,
    "editor.wordWrap": "on",

    "ltex.language": "en-GB",
    "ltex.additionalRules.enablePickyRules": false,
    "ltex.additionalRules.motherTongue": "en-GB",
    "ltex.additionalRules.neuralNetworkModel": "",
    "ltex.additionalRules.languageModel": "",
    "ltex.additionalRules.word2VecModel": "/home/adverley/Documents/phd-book/lt-resources/pt",

    "grammarly.autoActivate": true,
    "grammarly.audience": "expert",
    "grammarly.emotions": ["analytical", "confident", "neutral"],
    "grammarly.dialect": "british",
    "grammarly.goals": ["inform", "describe", "convince"],

    "latex-workshop.latex.recipe.default": "xelatexWithBib",
    "latex-workshop.latexindent.path": "latexindent",
    "latex-workshop.latex.autoBuild.run": "never",
    "latex-workshop.latex.recipes": [{
            "name": "xelatexWithBib",
            "tools": [
                "xelatex",
                "biber",
                "mkglossaries",
                "xelatex",
                "xelatex"
            ]
        },
        {
            "name": "xeLatex",
            "tools": [
                "xelatex",
            ]
        },
        {
            "name": "xeLatex xeLatex",
            "tools": [
                "xelatex",
                "xelatex"
            ]
        },
        {
            "name": "lualatexWithBib",
                "tools": [
                    "lualatex",
                    "biber",
                    "mkglossaries",
                    "lualatex",
                    "lualatex"
                ]
            },
        {
            "name": "latexmk ðŸ”ƒ",
            "tools": [
                "latexmk"
            ]
        },
    ],

    "latex-workshop.hover.preview.newcommand.parseTeXFile.enabled": true,
    "latex-workshop.hover.preview.newcommand.newcommandFile": "/home/adverley/Documents/phd-book/mathcmds.tex",

    "latex-workshop.latex.tools": [{
            "name": "xelatex",
            "command": "xelatex",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "-output-directory=%OUTDIR%",
                "-shell-escape",
                "%DOC%"
            ],
            "env": {}
        },
        {
            "name": "lualatex",
            "command": "lualatex",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "-output-directory=%OUTDIR%",
                "%DOC%"
            ],
            "env": {}
        },
        {
            "name": "latexmk",
            "command": "latexmk",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "-pdf",
                "-outdir=%OUTDIR%",
                "%DOC%"
            ],
            "env": {}
        },
        {
            "name": "lualatexmk",
            "command": "latexmk",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "-lualatex",
                "-outdir=%OUTDIR%",
                "%DOC%"
            ],
            "env": {}
        },
        {
            "name": "latexmk_rconly",
            "command": "latexmk",
            "args": [
                "%DOC%"
            ],
            "env": {}
        },
        {
            "name": "pdflatex",
            "command": "pdflatex",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "%DOC%"
            ],
            "env": {}
        },
        {
            "name": "bibtex",
            "command": "bibtex",
            "args": [
                "%DOCFILE%"
            ],
            "env": {}
        },
        {
            "name": "biber",
            "command": "biber",
            "args": [
                "%DOC%"
            ],
            "env": {}
        },
        {
            "name": "mkglossaries",
            "command": "makeglossaries",
            "args": [
                "%DOCFILE%"
            ],
            "env": {}
        },
        {
            "name": "rnw2tex",
            "command": "Rscript",
            "args": [
                "-e",
                "knitr::opts_knit$set(concordance = TRUE); knitr::knit('%DOCFILE_EXT%')"
            ],
            "env": {}
        },
        {
            "name": "jnw2tex",
            "command": "julia",
            "args": [
                "-e",
                "using Weave; weave(\"%DOC_EXT%\", doctype=\"tex\")"
            ],
            "env": {}
        },
        {
            "name": "jnw2texmintex",
            "command": "julia",
            "args": [
                "-e",
                "using Weave; weave(\"%DOC_EXT%\", doctype=\"texminted\")"
            ],
            "env": {}
        },
        {
            "name": "tectonic",
            "command": "tectonic",
            "args": [
                "--synctex",
                "--keep-logs",
                "%DOC%.tex"
            ],
            "env": {}
        }
    ],
    "files.exclude": {
        "**/*.acn": true,
        "**/*.acr": true,
        "**/*.alg": true,
        "**/*.aux": true,
        "**/*.bbl": true,
        "**/*.bcf": true,
        "**/*.blg": true,
        "**/*.ist": true,
        "**/*.lof": true,
        "**/*.lot": true,
        "**/*.out": true,
        "**/*.pdf": true,
        "**/*.run.xml": true,
        "**/*.synctex.gz": true,
        "**/*.toc": true,
        "**/*.log": true,
        "**/*.fls": true,
        "**/*.fdb_latexmk": true,
        "**/__latexindent_temp.tex":true,

    }
}